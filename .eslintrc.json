{
  "plugins": ["@typescript-eslint"],
  "extends": ["google", "prettier", "prettier/@typescript-eslint"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single", "avoid-escape"]
  },
  "env": {
    "node": true,
    "es6": true
  }
}
